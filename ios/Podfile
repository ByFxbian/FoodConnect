# Uncomment the next line to define a global platform for your project
platform :ios, '16.0'

target 'Runner' do
  # Comment the next line if you don't want to use dynamic frameworks
  use_frameworks!
  use_modular_headers!

  # Pods for Runner
  pod 'FirebaseAuth', '~> 11.8.1'
  pod 'FirebaseFirestore', '~> 11.8.0'


  target 'RunnerTests' do
    inherit! :search_paths
    # Pods for testing
  end

end

project 'Runner', {
  'Debug' => 'Target Support Files/Pods-Runner/Pods-Runner.debug.xcconfig',
  'Profile' => 'Target Support Files/Pods-Runner/Pods-Runner.profile.xcconfig',
  'Release' => 'Target Support Files/Pods-Runner/Pods-Runner.release.xcconfig',
}

post_install do |installer|
  installer.pods_project.targets.each do |target|
    next if target.nil? || !target.respond_to?(:build_configurations)  # Schutz gegen `nil`
    next if target.name.start_with?('Pods-') # Pods-Runner sicher ignorieren

    target.build_configurations.each do |config|
      config.build_settings['BUILD_LIBRARY_FOR_DISTRIBUTION'] = 'YES'
    end
  end
end